# ============================================================================
# Virtual Mouse Configuration - Environment Variables Template
# ============================================================================
# Copy this file to .env and customize values as needed.
# All settings have sensible defaults and are optional.
# ============================================================================

# ============================================================================
# CAMERA CONFIGURATION
# ============================================================================

# Camera device index (0 = default camera, 1 = second camera, etc.)
VM_CAMERA_INDEX=0

# Active resolution when hand is detected (widthxheight)
VM_CAMERA_RESOLUTION=960x540

# Target frames per second for camera capture
VM_CAMERA_FPS=30

# Idle resolution when no hand detected (reduces CPU load)
VM_CAMERA_IDLE_RESOLUTION=640x360

# Number of frames to skip in idle mode (0 = no skipping)
VM_CAMERA_IDLE_SKIP=2

# Number of initial frames to discard on camera startup (warmup)
VM_CAMERA_WARMUP_FRAMES=12

# Mirror camera horizontally (true/false)
VM_CAMERA_MIRROR=true


# ============================================================================
# GESTURE CONFIGURATION
# ============================================================================

# Pointer smoothing factor (0.0 - 1.0)
VM_GESTURE_SMOOTHING=0.25

# Click detection threshold (normalized distance, 0.0 - 1.0)
VM_GESTURE_CLICK_THRESHOLD=0.035

# Drag detection threshold (normalized distance, 0.0 - 1.0)
VM_GESTURE_DRAG_THRESHOLD=0.04

# Scroll detection threshold (normalized vertical distance, 0.0 - 1.0)
VM_GESTURE_SCROLL_THRESHOLD=0.12

# Click debounce time in milliseconds
VM_GESTURE_DEBOUNCE_MS=180

# Gesture idle timeout in seconds
VM_GESTURE_IDLE_TIMEOUT=2.0


# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Show debug visualization window (true/false)
VM_APP_SHOW_DEBUG=false

# Key to press to exit debug window
VM_APP_EXIT_KEY=q

# Activation hotkey (future feature)
VM_APP_ACTIVATION_HOTKEY=ctrl+alt+m

# Auto-start on launch (true/false)
VM_APP_AUTO_START=false

# Maximum inactive seconds before auto-shutdown (0 = disabled)
VM_APP_MAX_INACTIVE_SECONDS=10.0

# Debug window title
VM_APP_WINDOW_TITLE=Virtual Mouse


# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VM_LOG_LEVEL=INFO

# Enable file logging (true/false)
VM_LOG_TO_FILE=false

# Log file path
VM_LOG_PATH=logs/virtual_mouse.log



